<h3>Adressen</h3>
<p class="cmd-line">
   <%= link_to 'Neue Adresse', new_address_path %> |
	 <%= link_to 'zurueck', welcome_path %>
</p>
<div id="adrsuche">
	<table>
	  <tr>
	      <td><%= label :suche, 'Suchen' %></td>
	  </tr>
	  <% form_tag :action => "lookup" do %>
	    <tr>
	      <td><%= select_tag "suchfeld",
	              options_from_collection_for_select(@lookups, "id", "anzeige"),
	              :prompt => "Bitte waehlen" %></td>
	      <td><%= text_field_tag :suchwert %></td>
	      <td><%= submit_tag "los" %></td>
	    </tr>
	  <% end %>
	</table>
</div>
<div id="list">
	<table>
	   <% @addresses.each do |address| %>
	      <tr>
	          <td><%= link_to address.firma, edit_address_path(address) %></td>
						<td><%= address.nachname %></td>
	      </tr>
	   <% end %>
	</table>
</div>
