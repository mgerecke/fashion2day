      <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>
      <ul>
         <% @address.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
   <% end %>
   <div id="adresse">
   	<table>
	      <tr>
	      	<td><%= f.label :firma %></td>
	        <td><%= f.text_field :firma, :size => 30 %></td>
	      	<td><%= f.label :fon, 'Telefon' %></td>
	        <td><%= f.text_field :fon %></td>
	      </tr>
	      <tr>
	      	<td><%= f.label :nachname %></td>
	        <td><%= f.text_field :nachname %></td>
	        <td><%= f.label :fax %></td>
	        <td><%= f.text_field :fax %></td>
	      </tr>
	      <tr>
	      	<td><%= f.label :vorname %>
	        <td><%= f.text_field :vorname %></td>
		      <td><%= f.label :email %></td>
	        <td><%= f.text_field :email %></td>
	      </tr>
	      <tr>
	      	<td><%= f.label :position %></td>
	        <td><%= f.text_field :position %></td>
	      	<td><%= f.label :web %></td>
	        <td><%= f.text_field :web %></td>
	      </tr>
	      <tr>
	      	<td><%= f.label :strasse %></td>
	        <td><%= f.text_field :strasse %></td>
	         <td><%= f.label :subcategory, "Kategorie" %></td>
	         <td><%= f.text_field :subcategory %></td>
	      </tr>
	      <tr>
	         <td><%= f.label :hausnr %></td>
	         <td><%= f.text_field :hausnr, :size => 5 %></td>
