<%= form_for(@user) do |f| %>
  <% if request.post? %>
  	<%= render 'shared/error_messages', :object => f.object %>
  <% end %>
  <div id ="login">
    <table>
      <tr>
      	<td><%= f.label :name %></td>
	    	<td><%= f.text_field :name %><td>
    	</tr>
      <tr>
      	<td><%= f.label :email %></td>
	    	<td><%= f.text_field :email %></td>
    	</tr>
	  	<tr>
	    	<td><%= f.label :password, "Kennwort" %></td>
	    	<td><%= f.password_field :password %></td>
	  	</tr>
	  	<tr>
	    	<td><%= f.label :password_confirmation, "Kennwort wiederholen" %></td>
	    	<td><%= f.password_field :password_confirmation %></td>
	  	</tr>
	  	<tr>
				<td><%= f.submit "speichern" %></td>
			</tr>
  	</table>
  </div>
<% end %>
<p><%= link_to "zurueck", users_path %></p>